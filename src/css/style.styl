.mentors {

  margin-top:50px;
  margin-bottom: 50px;

  &__brick {
    margin-top:20px;
    padding:15px;
    padding-bottom: 30px;
    border-bottom:1px solid #EEEEEE;
    display: flex;
  }

  &__avatar {
    flex:1
    display: flex;
    align-items: center;
  }

  &__info {

    flex:3

    &__name{
      color:#007AFF;
      font-size:22px;
      font-weight: 100;

    }

    &__title{
      color:#8A8A8A;
      font-size:15px;
      font-weight: 300;
      margin-bottom: 7px;
    }

    &__shortbio{
      color:#8A8A8A;
      font-size:14px;
      font-weight: 100;
      margin-bottom: 7px;
    }

    &__skills{

      margin-top:10px;

      &__skill{
        font-size:12px;
        border-radius: 4px;
        color:#007AFF;
        padding-top:4px;
        padding-bottom: 4px;
        padding-left:12px;
        padding-right:12px;
        background-color:#f5f5f5;
        margin-right:10px;
      }

    }

  }

  &__actions {
    flex:1
    display: flex;
    flex-direction: column;
    justify-content: space-between;

    &__price {
      display: flex;
      justify-content: flex-end;
      color:#8A8A8A;
      font-size:12px;
    }
  }

}



.small-font {
  font-size:12px;
}


.home-page {
  justify-content: center;
  flex: 1;

  &__section {
    text-align: center;
    margin-top:40px;
  }

  &__header {
    color:#007AFF;
    text-align: center;
    font-weight:100;
    font-size:3em
  }

  &__sub-header {
    color:#007AFF;
    text-align: center;
    font-weight:100;
    font-size:2em
  }

  &__navbuttons {

    margin-top:50px;
    text-align: center;

    &--button {
      color:#007AFF;
      border:1px solid #007AFF;
      font-weight: 100;
      background-color: #ffffff;
      text-decoration: none;
      padding:5px;
      padding-left:2%;
      padding-right:2%
      border-radius: 4px;
      transition: 0.2s ease;
      margin:5px;

      &:hover{
        background-color: #f5f5f5;
        cursor: pointer;
      }

      &:focus , &:active {
        outline: 0;
      }

    }

  }

}


