.dropdown {

  right:1rem
  position: relative;
  width:60%;


  &__content {
    position: absolute;
    right:0;
    transition: .2s ease;

    min-width: 160px;
    padding-top:10px;
  //  bottom: -10px;
    opacity: 1
  }

  &__item {
    color:#007AFF;
    font-weight:100;
    font-size:12px;
    transition: .2s ease;
    padding-bottom:10px;
    &:hover {
      cursor: pointer;
      color: #808080;
    }

  }



  &--closed {
    opacity:0;
  }

}

.navlinks {
    color:#007AFF;
    border:none;
    background-color:#ffffff;
    font-weight:100;
    font-size:14px;
}

